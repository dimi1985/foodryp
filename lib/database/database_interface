// filename: database_interface.dart
import 'package:foodryp/models/celebration_day.dart';
import 'package:foodryp/models/category.dart';
import 'package:foodryp/models/comment.dart';
import 'package:foodryp/models/recipe.dart';
import 'package:foodryp/models/user.dart';
import 'package:foodryp/models/weeklyMenu.dart';

abstract class DatabaseInterface {
  Future<void> init();
  // For Celebrate day
  Future<int> insertCelebration(CelebrationDay celebration);
  Future<List<CelebrationDay>> queryAllCelebrations();
  Future<int> updateCelebration(CelebrationDay celebration);
  Future<int> deleteCelebration(int id);
  // For Categories
  Future<int> insertCategory(CategoryModel category);
  Future<List<CategoryModel>> queryAllCategories();
  Future<int> updateCategory(CategoryModel category);
  Future<int> deleteCategory(int id);
  // For Recipes
  Future<int> insertRecipe(Recipe recipe);
  Future<List<Recipe>> queryAllRecipes();
  Future<List<Recipe>> queryTopThreeRecipes(); // Add this method
  Future<int> updateRecipe(Recipe recipe);
  Future<int> deleteRecipe(int id);
  // For Users
  Future<int> insertUser(User user);
  Future<List<User>> queryAllUsers();
  Future<int> updateUser(User user);
  Future<int> deleteUser(int id);
  // For Comments
  Future<int> insertComment(Comment comment);
  Future<List<Comment>> queryAllComments();
  Future<int> updateComment(Comment comment);
  Future<int> deleteComment(int id);
  // For Weeklymenus
  Future<int> insertWeeklyMenu(WeeklyMenu weeklyMenu);
  Future<List<WeeklyMenu>> queryAllWeeklyMenu();
  Future<int> updateWeeklyMenu(WeeklyMenu weeklyMenu);
  Future<int> deleteWeeklyMenu(int id);
}

